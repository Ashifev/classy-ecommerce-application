<!-- Order Return request Button-->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const orderId = "<%=userOrder._id%>"
    document.querySelectorAll(".returnRequests").forEach(function (element) {
      const acceptRequest = element.querySelector(".acceptThis");
      const returnReason = element.querySelector(".returnReason").getAttribute('data-reason');
      const acceptItem = element.querySelector(".acceptThis").getAttribute("data-product-id");
      acceptRequest.addEventListener("click", function (event) {
        event.preventDefault();
        const Data = new URLSearchParams({
          orderId,
          acceptItem,
          returnReason
        });

        Swal.fire({
          title: "Are you sure?",
          text: "You want to accept this request",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, Accept it!",
        }).then((result) => {
          if (result.isConfirmed) {
            console.log("click cheyythuuu ");
            
            fetch(`/admin/accept-request?${Data}`, {
              method: "POST",
              headers: { "Content-Type": "application/json" },
            })
            .then((response) => response.json())
            .then((response) => {
              if (response.success) {
                Swal.fire({
                  position: "center",
                  icon: "success",
                  title: response.msg,
                  showConfirmButton: false,
                  timer: 1500,
                });
                setTimeout(() => {
                  window.location.reload();
                }, 1000);
              }
            });
          }
        });
      });
    });
  });
</script>

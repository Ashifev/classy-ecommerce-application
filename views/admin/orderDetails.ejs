                        <%= userOrder.status === 'Delivered' ? 'status-delivered' : '' %>
                        <%= userOrder.status === 'Processing' ? 'status-processing' : '' %>
                        <%= userOrder.status === 'Shipped' ? 'status-shipped' : '' %>
                        <%= userOrder.status === 'Cancelled' ? 'status-cancelled' : '' %>">

  padding-right: 10px;
}
.fl-left{
  float: left;
}
.fl-right{
  float: right;
}
.no-padding-left{
  padding-left: 0px;
}
.no-padding-right{
  padding-right: 0px;
}
.radius-4{
  border-radius: 4px;
}
.radius-6{
  border-radius: 6px;
}
.no-border{
  border: none;
}
.but{
  font-weight: bold;
  cursor: pointer;
  color: #2ce5c0;
  border: none;
}
.but-con{
  padding: 5px 10px;
  background-color: blue;

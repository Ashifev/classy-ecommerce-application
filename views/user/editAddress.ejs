  <style>
    /* General styles */

/* General styles */

.containerr {
  max-width: 800px;
  margin: auto;
  padding: 20px;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
}

/* Form styles */
h2 {
  text-align: center;
  margin-bottom: 20px;
}

.form-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 15px;
}

.form-group {
  flex: 1;
  min-width: 150px;
  margin: 10px;
  display: flex;
  flex-direction: column;
}

.form-group.full-width {
  flex: 1 100%;
}

label {
  margin-bottom: 8px;
  font-weight: bold;
}

input[type="text"],
input[type="tel"],
textarea,
select {
  width: 100%;
  padding: 10px;
  margin: 5px 0;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

textarea {
  height: 100px;
  resize: vertical;
}

button[type="submit"],
button[type="button"] {
  width: 120px;
  padding: 10px;
  margin: 10px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  text-align: center;
  background-color: #4CAF50;
  color: white;
}

button[type="button"] {
  background-color: #f44336;
}

button[type="submit"]:hover,
button[type="button"]:hover {
  opacity: 0.8;
}

.button-row {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

.error-message {
  color: red;
  font-size: 0.875em;
  margin-top: -10px;
}


  </style>

  <section class="my-5">
    <div class="containerr">
      <div class="main-body">
        <h2>Add Address</h2>
        <form id="addAddressForm" action="/edit-address/<%=address._id%>" method="post">
          <div class="form-row">
            <div class="form-group">
              <label for="name">Name:<span style="color: red;">*</span></label>
              <input name="name" value="<%=address.name%>" type="text" id="name" />
              <span class="error-message" id="nameError"></span>
            </div>
            <div class="form-group">
              <label for="mobile">Mobile No.:<span style="color: red;">*</span></label>
              <input name="mobile" value="<%=address.mobile%>" type="tel" id="mobile" pattern="[0-9]{10}" />
              <span class="error-message" id="mobileError"></span>
            </div>
            <div class="form-group">
              <label for="pincode">Pin code:<span style="color: red;">*</span></label>
              <input name="pincode" value="<%=address.pincode%>" type="text" id="pincode"/>
              <span class="error-message" id="pincodeError"></span>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="locality">Locality:<span style="color: red;">*</span></label>
              <input name="locality" value="<%=address.locality%>" type="text" id="locality" />
              <span class="error-message" id="localityError"></span>
            </div>
            <div class="form-group">
              <label for="city">City/District/Town:<span style="color: red;">*</span></label>
              <input name="city" value="<%=address.city%>" type="text" id="city"/>
              <span class="error-message" id="cityError"></span>
            </div>
            <div class="form-group">
              <label for="state">State: <span style="color: red;">*</span></label>
              <select name="state" id="state" >
                <option value="<%=address.state%>">Select a state</option>
                <option value="State 1">State 1</option>
                <option value="State 2">State 2</option>
                <option value="State 3">State 3</option>
              </select>
              <span class="error-message" id="stateError"></span>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group full-width">
              <label for="address">Address: <span style="color: red;">*</span></label>
              <textarea name="address"  id="address"><%=address.address%></textarea>
              <span class="error-message" id="addressError"></span>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="landmark">Landmark (Optional):</label>
              <input name="landmark" value="<%=address.landmark%>" type="text" id="landmark" />
              <span class="error-message" id="landmarkError"></span>
            </div>
            <div class="form-group">
              <label for="alternatePhone">Alternate Phone (Optional):</label>
              <input name="alternateMobile" value="<%=address.alternateMobile%>" type="tel" id="alternatePhone" pattern="[0-9]{10}" />
              <span class="error-message" id="alternatePhoneError"></span>
            </div>
          </div>

          <div class="button-row">
            <button id="submitAddress" type="submit">Save</button>
            <button type="button" onclick="window.location.href='/profile'">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script>
    document.getElementById('addAddressForm').addEventListener('submit', validateForm);
  
    function validateForm(event) {
      event.preventDefault();
  
      let isValid = true;
  
      // Clear previous error messages
      const errorMessages = document.querySelectorAll('.error-message');
      errorMessages.forEach(msg => msg.textContent = '');
  
      // Get form values and validate each field
      isValid = validateField('name', 'Name is required.') && isValid;
      isValid = validateField('mobile', 'Mobile number is required.', '[0-9]{10}', 'Mobile number must be 10 digits.') && isValid;
      isValid = validateField('pincode', 'Pin code is required.') && isValid;
      isValid = validateField('locality', 'Locality is required.') && isValid;
      isValid = validateField('city', 'City/District/Town is required.') && isValid;
      isValid = validateField('state', 'State is required.') && isValid;
      isValid = validateField('address', 'Address is required.') && isValid;
  
      // Validate Alternate Phone (Optional)
      const alternatePhone = document.getElementById('alternatePhone').value.trim();
      if (alternatePhone && !/^[0-9]{10}$/.test(alternatePhone)) {
        isValid = false;
        showError('alternatePhone', 'Alternate phone number must be 10 digits.');
      }
  
      if (isValid) {
        // Form is valid, proceed with form submission
        document.getElementById('addAddressForm').submit();
      }
    }
  
    function validateField(fieldId, requiredMessage, pattern = null, patternMessage = null) {
      const field = document.getElementById(fieldId);
      const value = field.value.trim();
  
      if (!value) {
        showError(fieldId, requiredMessage);
        return false;
      }
  
      if (pattern && !new RegExp(pattern).test(value)) {
        showError(fieldId, patternMessage);
        return false;
      }
  
      return true;
    }
  
    function showError(fieldId, message) {
      const errorElement = document.getElementById(fieldId + 'Error');
      errorElement.textContent = message;
      errorElement.style.color = 'red';
      errorElement.style.display = 'block';
    }
  </script>
